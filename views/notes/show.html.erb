<div class="row hfeed">
  <div class='col-lg-8 col-lg-offset-2'>
    <div class='h-entry hentry h-as-note'>
      <% if @reply %>
        <%= render :partial => "note_reply_context", :object => @reply %>
      <% end %>
      <article class='status'>
        <div class='p-name entry-title e-content entry-content article'><%= @note.html(:body) %></div>
      </article>
    </div>    
    <hr />
    <div class='row'>
      <div class='col-lg-12 text-right'>
          <small>Par <%= @note.user.nickname %>, le <time><%= link_to_permalink(@note, display_date_and_time(@note.published_at)) %></time>. <%= view_on_twitter @note %></small><br />
          <a target="_blank" class='icon' rel="nofollow" onclick="javascript:window.open(this.href, '', 'menubar=no,toolbar=no,resizable=yes,scrollbars=yes,height=400,width=700');return false;" href="https://twitter.com/share?url=<%= URI.encode(@note.permalink_url) %>&amp;text=<%= URI.escape(note_title(@note.html(:body))) %>"><img src="/images/theme/icon_share_twitter.png" alt="Partagez sur Twitter"></a>
          <a target="_blank" class='icon' rel="nofollow" onclick="javascript:window.open(this.href, '', 'menubar=no,toolbar=no,resizable=yes,scrollbars=yes,height=500,width=700');return false;" href="https://www.facebook.com/sharer.php?u=<%= URI.encode(@note.permalink_url) %>&amp;t=<%= URI.escape(note_title(@note.html(:body))) %>"><img src="/images/theme/icon_share_facebook.png" alt="Partagez sur Facebook"></a>
          <a target="_blank" class='icon' rel="nofollow" onclick="javascript:window.open(this.href, '', 'menubar=no,toolbar=no,resizable=yes,scrollbars=yes,height=450,width=650');return false;" href="https://plus.google.com/share?url=<%= URI.encode(@note.permalink_url) %>&amp;hl=fr"><img src="/images/theme/icon_share_googleplus.png" alt="Partagez sur Google Plus"></a>
          <a target="_blank" class='icon' rel="nofollow" onclick="javascript:window.open(this.href, '', 'menubar=no,toolbar=no,resizable=yes,scrollbars=yes,height=450,width=650');return false;" href="https://www.linkedin.com/shareArticle?mini=true&amp;url=<%= URI.encode(@note.permalink_url) %>&amp;title=<%= URI.escape(note_title(@note.html(:body))) %>"><img src="/images/theme/icon_share_linkedin.png" alt="Partagez sur Linkedin Plus"></a>
      </div>
    </div>
</div>