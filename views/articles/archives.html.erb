<div class='row'>
  <div class='col-lg-8 col-lg-offset-2'>
    <% if @articles.to_a.empty? -%>
    <div class="post">
    <p><%= t("No articles found")%>...</p>
    </div>
    <% else
         counter = 0
         currentmonth = 0
         currentyear = 0
         for article in @articles
           if (article.published_at.month != currentmonth || article.published_at.year != currentyear)
             currentmonth = article.published_at.month
             currentyear = article.published_at.year -%>
              <%= content_tag(:hr) if counter != 0 %>
              <% counter = 1 if counter == 0 %>
              <h3><%= t_month(Date::MONTHNAMES[article.published_at.month].to_s.downcase).to_s.capitalize %> <%= article.published_at.year %></h3>
               <% end -%>
               <p>
                 <%= article.published_at.mday %> -
                 <%= link_to_permalink(article,h(article.title)) %><small><%= tag_links(article, "<br />Dans") unless article.tags.empty? %></small>
               </p>
    <% end 
    end -%>
  </div>
</div>